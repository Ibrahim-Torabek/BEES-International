<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/category_padding_size">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_build_24" />

    <TextView
        android:id="@+id/categoryListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="@dimen/category_padding_size"
        android:textSize="@dimen/listview_size" />

    <TextView
        android:id="@+id/categoryCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/category_padding_size"
        android:textAlignment="textEnd"
        android:textSize="@dimen/listview_size" />
</LinearLayout>